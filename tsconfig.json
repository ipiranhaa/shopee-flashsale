{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "noEmit": false,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
